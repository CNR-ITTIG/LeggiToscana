										</h:tr>
										<h:tr>
											<h:td />
											<h:td>variazioni in diminuzione</h:td>
											<h:td>L. 43.725.726</h:td>
										</h:tr>
										<h:tr>
											<h:td>Passivo:</h:td>
											<h:td>variazioni in aumento</h:td>
											<h:td>L. 1.692.886.097</h:td>
										</h:tr>
										<h:tr>
											<h:td />
