												finanziamento statale)
											</h:td>
											<h:td />
										</h:tr>
										<h:tr>
											<h:td />
											<h:td>Competenza:</h:td>
											<h:td>L. 3.500.000.000</h:td>
										</h:tr>
										<h:tr>
											<h:td />
											<h:td>Cassa:</h:td>
											<h:td>L. 3.500.000.000</h:td>
										</h:tr>
									</h:tbody>
								</h:table>
							</corpo>
						</ep>
