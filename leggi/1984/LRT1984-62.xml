									</h:tr>
									<h:tr>
										<h:td />
										<h:td>indennità di carica presidente</h:td>
										<h:td>L. 512.000;</h:td>
									</h:tr>
									<h:tr>
										<h:td />
										<h:td>indennità di carica membri</h:td>
										<h:td>L. 384.000.</h:td>
									</h:tr>
								</h:tbody>
							</h:table>
						</corpo>
