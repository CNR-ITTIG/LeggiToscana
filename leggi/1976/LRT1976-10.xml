							<mmod id="mmo1">
								<mod id="mod2">
									Gli articoli
									<rif xlink:href="urn:nir:regione.toscana:legge:1975-06-07;71#art5" xlink:type="simple">5</rif>
									,
								</mod>
								<mod id="mod3">
									<rif xlink:href="urn:nir:regione.toscana:legge:1975-06-07;71#art9" xlink:type="simple">9</rif>
								</mod>
								<mod id="mod4">
									e
									<rif xlink:href="urn:nir:regione.toscana:legge:1975-06-07;71#art20" xlink:type="simple">20 della legge regionale 7 giugno 1975, n. 71</rif>
									sono abrogati.
								</mod>
							</mmod>
						</corpo>
					</comma>
