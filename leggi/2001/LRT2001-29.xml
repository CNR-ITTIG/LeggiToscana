							<num>h)</num>
							<corpo>
								<mmod id="mmo1">
									<rif xlink:href="urn:nir:regione.toscana:legge:1998-08-06;52#art16" xlink:type="simple">articolo 16</rif>
									, commi
									<mod id="mod14">
										<rif xlink:href="urn:nir:regione.toscana:legge:1998-08-06;52#art16-com3" xlink:type="simple">3</rif>
									</mod>
									,
									<mod id="mod15">
										<rif xlink:href="urn:nir:regione.toscana:legge:1998-08-06;52#art16-com4" xlink:type="simple">4</rif>
									</mod>
