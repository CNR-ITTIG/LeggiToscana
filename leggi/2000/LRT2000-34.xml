								<dsp:subarg>
									<ittig:tipo valore="articolo" xmlns:ittig="http://www.ittig.cnr.it/provvedimenti/2.2" />
								</dsp:subarg>
							</dsp:novella>
							<dsp:novellando>
								<dsp:subarg>
									<ittig:tipo valore="articolo" xmlns:ittig="http://www.ittig.cnr.it/provvedimenti/2.2" />
								</dsp:subarg>
