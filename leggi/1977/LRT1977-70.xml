										</h:tr>
										<h:tr>
											<h:td />
											<h:td />
											<h:td>Competenza</h:td>
											<h:td>L. 1.300.000.000</h:td>
										</h:tr>
										<h:tr>
											<h:td />
											<h:td />
											<h:td>Cassa</h:td>
											<h:td>L. 1.300.000.000</h:td>
										</h:tr>
										<h:tr>
