													<rif xlink:href="urn:nir:regione.toscana:legge:1977-05-06;28#art38" xlink:type="simple">38</rif>
													e
													<rif xlink:href="urn:nir:regione.toscana:legge:1977-05-06;28#art87" xlink:type="simple">87</rif>
													LR 6.5.77 n. 28
